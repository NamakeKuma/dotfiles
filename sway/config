set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term kitty

set $menu wofi --show drun 

output * bg /home/$USER/Изображения/kita2.jpg fill

exec /usr/lib/xdg-desktop-portal-wlr 
exec /usr/lib/xdg-desktop-portal-gtk
exec /usr/lib/xdg-desktop-portal
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
exec dbus-update-activation-environment --systemd --all
exec systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP QT_QPA_PLATFORMTHEME
exec systemctl --user restart xdg-desktop-portal

exec nwg-look -a

exec autotiling

exec gsettings set org.gnome.desktop.wm.preferences button-layout ''
exec gsettings set org.gnome.desktop.wm.preferences theme ''

exec waybar
exec swaync

exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store
exec wl-clip-persist --clipboard regular

exec corectrl
exec Telegram -startintray
exec blueman-applet

default_border pixel 0

input * {
	xkb_layout us,ru
	xkb_options grp:win_space_toggle
	
	repeat_rate 35
	repeat_delay 250

	accel_profile flat
}

floating_modifier $mod normal

bindsym --to-code {
	$mod+T exec $term
	
	$mod+E exec thunar
	
	$mod+Q kill
	
	$mod+D exec $menu
	
	$mod+Shift+C reload
	
	$mod+Shift+M exec swaymsg exit
	
	$mod+$left focus left
	$mod+$down focus down
	$mod+$up focus up
	$mod+$right focus right
	
	$mod+Left focus left
	$mod+Down focus down
	$mod+Up focus up
	$mod+Right focus right
	
	$mod+Shift+$left move left
	$mod+Shift+$down move down
	$mod+Shift+$up move up
	$mod+Shift+$right move right
	
	$mod+Shift+Left move left
	$mod+Shift+Down move down
	$mod+Shift+Up move up
	$mod+Shift+Right move right
	
	$mod+1 workspace number 1
	$mod+2 workspace number 2
	$mod+3 workspace number 3
	$mod+4 workspace number 4
	$mod+5 workspace number 5
	$mod+6 workspace number 6
	$mod+7 workspace number 7
	$mod+8 workspace number 8
	$mod+9 workspace number 9
	$mod+0 workspace number 10
	
	$mod+Shift+1 move container to workspace number 1; workspace 1
	$mod+Shift+2 move container to workspace number 2; workspace 2
	$mod+Shift+3 move container to workspace number 3; workspace 3
	$mod+Shift+4 move container to workspace number 4; workspace 4
	$mod+Shift+5 move container to workspace number 5; workspace 5
	$mod+Shift+6 move container to workspace number 6; workspace 6
	$mod+Shift+7 move container to workspace number 7; workspace 7
	$mod+Shift+8 move container to workspace number 8; workspace 8
	$mod+Shift+9 move container to workspace number 9; workspace 9
	$mod+Shift+0 move container to workspace number 10; workspace 10
	
	$mod+F fullscreen
	
	$mod+Z floating toggle

	$mod+Shift+S exec nakushot --area
}

bindsym --locked XF86AudioMute exec pactl set-sink-mute \@DEFAULT_SINK@ toggle
bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume \@DEFAULT_SINK@ -5%
bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume \@DEFAULT_SINK@ +5%
bindsym --locked XF86AudioMicMute exec pactl set-source-mute \@DEFAULT_SOURCE@ toggle

xwayland enable

for_window [app_id="orage"] floating enable
for_window [app_id="Thunar"] floating enable
for_window [app_id="org.pipewire.Helvum"] floating enable

include /etc/sway/config.d/*
